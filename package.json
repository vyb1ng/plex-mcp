{
  "name": "plex-mcp",
  "version": "0.2.1",
  "description": "A Model Context Protocol (MCP) server that enables Claude to query and manage Plex media libraries.",
  "main": "index.js",
  "bin": {
    "plex-mcp": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "jest --testPathIgnorePatterns=/tests/e2e/",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:e2e:analysis": "jest --testPathPattern=e2e --testNamePattern=\"(Playlist Behavior Analysis|Critical Remove Bug Investigation|Multiple Item Addition Analysis)\"",
    "test:all": "jest",
    "test:watch": "jest --watch --testPathIgnorePatterns=/tests/e2e/",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=/tests/e2e/",
    "prepublishOnly": "npm test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release": "npm publish"
  },
  "keywords": [
    "mcp",
    "plex",
    "model-context-protocol",
    "claude",
    "media",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vyb1ng/plex-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/vyb1ng/plex-mcp/issues"
  },
  "homepage": "https://github.com/vyb1ng/plex-mcp#readme",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "axios": "^1.10.0",
    "plex-oauth": "^2.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^30.0.0"
  },
  "overrides": {
    "plex-oauth": {
      "axios": "^1.10.0"
    }
  }
}
